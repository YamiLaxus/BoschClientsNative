<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phonedev.boschclients">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".pages.MiApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BoschClients">
        <activity android:name=".pages.NotFoundActivity"></activity>
        <activity
            android:name=".pages.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pages.StartActivity" />
        <activity android:name=".pages.AboutActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>